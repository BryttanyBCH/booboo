opts="start stop status"

depend() {
        need net
}

start() {
	ebegin "Starting tuncfg"
	start-stop-daemon --start --exec /sbin/tuncfg
	eend $?
}

stop() {
	ebegin "Stopping tuncfg"
	start-stop-daemon --stop --name tuncfg 
	eend $?
}

